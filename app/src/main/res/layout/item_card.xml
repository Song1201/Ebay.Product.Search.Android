<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/itemCard"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white"
	android:layout_margin="6dp"
	android:clickable="true"
	android:foreground="?android:attr/selectableItemBackgroundBorderless">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ImageView
			android:id="@+id/itemCardImage"
			android:layout_width="match_parent"
			android:layout_height="180dp"
			android:layout_marginTop="0dp"
			android:scaleType="fitCenter"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/itemCardTitle"
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:gravity="center"
			android:textColor="@android:color/black"
			android:textSize="16dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/itemCardImage" />


		<TextView
			android:id="@+id/itemCardZipShipping"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="12dp"
			android:lineSpacingExtra="2dp"
			android:layout_marginTop="24dp"
			app:layout_constraintTop_toBottomOf="@+id/itemCardTitle"
			app:layout_constraintStart_toStartOf="parent"/>

		<ImageButton
			android:id="@+id/itemCardWishList"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_marginEnd="8dp"
			android:background="@android:color/transparent"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="@+id/itemCardZipShipping"
			app:layout_constraintBottom_toBottomOf="@+id/itemCardZipShipping"/>

		<TextView
			android:id="@+id/itemCardCondition"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:layout_marginStart="6dp"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="4dp"
			android:textSize="14dp"
			android:gravity="bottom"
			app:layout_constraintTop_toBottomOf="@+id/itemCardZipShipping"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>

		<TextView
			android:id="@+id/itemCardPrice"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp"
			android:layout_marginEnd="8dp"
			android:textSize="16dp"
			android:textColor="@color/colorPrimaryDark"
			android:textStyle="bold"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>


	</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>